<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customize Event</title>
    <link rel="stylesheet" href="/customizeEvent.css">
    <style>
        .success-message {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        /* Additional CSS for button styling */
        #viewAttendees {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 15px;
        }
        #viewAttendees:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <button id="viewAttendees">View Attendee Lists</button>

    <h1>Customize Event</h1>

    <% if (successMessage) { %>
        <div class="success-message">
            <%= successMessage %>
        </div>
    <% } %>

    <form action="/update-event" method="post">
        <input type="hidden" name="id" value="<%= event.id %>">
        <div>
            <label for="title">Event Title:</label>
            <input type="text" id="title" name="title" value="<%= event.title %>" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required><%= event.description %></textarea>
        </div>
        <div>
            <label for="date">Date:</label>
            <% const formattedDate = event.datetime ? event.datetime.toISOString().split('T')[0] : ''; %>
            <input type="date" id="date" name="date" value="<%= formattedDate %>" required>
        </div>
        <div>
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" value="<%= event.location %>" required>
        </div>
        <button type="submit">Update Event</button>
    </form>

    <button id="backButton">Back to Events</button>

    <script>
        document.getElementById('backButton').addEventListener('click', function() {
            window.location.href = '/upcomingEvents';
        });

        document.getElementById('viewAttendees').addEventListener('click', function() {
            // Replace `id` with the actual event ID variable
            const id = '<%= event.id %>';
            window.location.href = `/attendee-list/${id}`;
        });
    </script>
</body>
</html>
